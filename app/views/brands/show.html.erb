<p id="notice"><%= notice %></p>

<% if current_user.admin? %>
<%= link_to 'Edit', edit_brand_path(@brand) %>
<% end %> 
<%= link_to 'Back', brands_path %>

<p>
  <strong>Brand:</strong>
  <%= @brand.name %>
  <div style="width: 400px; height: auto;">
    <%= image_tag(@brand.image, style:"width:100%") %>
  </div>  
</p>

<%= render @brand.items %>

<% if current_user.admin? %>

<h1>Add New Items and Price:</h1>
<%= form_for([@brand, @brand.items.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% end %> 